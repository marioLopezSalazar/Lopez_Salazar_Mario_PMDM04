<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/navigation_bar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <!-- INDICATIVE RADIO-BUTTON BAR -->
    <RadioGroup
        android:id="@+id/guide_selector"
        style="@style/navigation_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_welcome"
            style="@style/radio_button_style" />
        <RadioButton
            android:id="@+id/radio_characters"
            style="@style/radio_button_style" />
        <RadioButton
            android:id="@+id/radio_worlds"
            style="@style/radio_button_style" />
        <RadioButton
            android:id="@+id/radio_collectibles"
            style="@style/radio_button_style" />
        <RadioButton
            android:id="@+id/radio_info"
            style="@style/radio_button_style" />
        <RadioButton
            android:id="@+id/radio_guide"
            style="@style/radio_button_style" />
        <RadioButton
            android:id="@+id/radio_summary"
            style="@style/radio_button_style" />
    </RadioGroup>


    <!-- SKIP GUIDE BUTTON -->
    <Button
        android:id="@+id/btn_skip"
        style="@style/skip_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

</LinearLayout>