<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_bar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center">

    <!-- BARRA DE RADIO-BUTTONS INDICATIVOS -->
    <RadioGroup
        android:id="@+id/guide_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/rounded_rectangle"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_welcome"
            style="@style/radio_button_style" />
        <RadioButton
            android:id="@+id/radio_characters"
            style="@style/radio_button_style"/>
        <RadioButton
            android:id="@+id/radio_worlds"
            style="@style/radio_button_style"/>
        <RadioButton
            android:id="@+id/radio_collectibles"
            style="@style/radio_button_style"/>
        <RadioButton
            android:id="@+id/radio_info"
            style="@style/radio_button_style"/>
        <RadioButton
            android:id="@+id/radio_guide"
            style="@style/radio_button_style"/>
        <RadioButton
            android:id="@+id/radio_summary"
            style="@style/radio_button_style"/>
    </RadioGroup>

    <!-- OMITIR GUIA -->
    <Button
        android:id="@+id/btn_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:background="@android:color/transparent"
        android:text="@string/skip_guide"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:ignore="TextContrastCheck" />
</LinearLayout>